---
const mytools = [
  "Python",
  "R",
  "SQL",
  "Jupyter",
  "Pandas",
  "NumPy",
  "Matplotlib",
  "Seaborn",
  "Scikit-learn",
  "TensorFlow",
  "Keras",
  "PyTorch",
  "Tableau",
  "Power BI",
  "Git",
  "Docker",
  "VS Code",
  "Google Colab",
  "Excel",
];
---

<script>
  import { gsap } from "gsap";

  document.addEventListener("DOMContentLoaded", function () {
    const clonedContainer = document.querySelector("#cloned") as any;

    Array.from(clonedContainer.children).forEach((img: any) => {
      const clone = img.cloneNode(true);
      clonedContainer.appendChild(clone);
    });

    const tl = gsap.timeline({ repeat: -1 });
    tl.to(clonedContainer, {
      x: -(clonedContainer.scrollWidth / 2),
      duration: 30,
      ease: "none",
    });
  });
</script>

<section class="bg-black py-6 relative z-5 animate-fade-in-up">
  <div class="overflow-hidden">
    <div class="flex items-center gap-10 md:gap-30" id="cloned">
      {
        mytools.map((item) => (
          <div class="text-white flex-1 text-2xl whitespace-nowrap">
            {" "}
            {item}{" "}
          </div>
        ))
      }
    </div>
  </div>
</section>
