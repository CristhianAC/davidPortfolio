---
import researchIcon from "../assets/services/research.svg";
import wireIcon from "../assets/services/wire.svg";
import uiIcon from "../assets/services/ui.svg";
import protoIcon from "../assets/services/proto.svg";

import svgPinkStar from "../assets/pink-star.svg";

const stats = [
  { name: `Data Projects`, value: "40+" },
  { name: `Models Deployed`, value: "15+" },
  { name: `Experience`, value: "5 years" },
];

const services = [
  {
    name: `Data Analysis`,
    desc: `Exploratory data analysis, cleaning, and visualization for actionable insights`,
  },
  {
    name: `Machine Learning`,
    desc: `Development and deployment of predictive models using state-of-the-art algorithms`,
  },
  {
    name: `Data Engineering`,
    desc: `Building robust data pipelines and automating workflows for analytics`,
  },
  {
    name: `Business Intelligence`,
    desc: `Interactive dashboards and reports for data-driven decision making`,
  },
];
---

<section class="relative px-3 md:px-10 overflow-hidden">
  <img
    src={svgPinkStar.src}
    alt="Pink decorative star"
    width="80"
    class="absolute -right-8 bottom-0"
  />

  <div class="max-w-4xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-[70%_30%] py-10 relative">
      <div class="flex items-end">
        <h2 class="text-4xl">
          Data analysis and machine learning services to boost your business
        </h2>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-[30%_70%] border-t-2">
      <div
        class="flex flex-col border-l-2 border-r-2 md:border-b-2 md:border-r-0 md:border-l-0"
      >
        {
          stats.map((item) => (
            <div class="flex flex-col p-3 md:p-6  md:border-b-2 last:border-none">
              <h3 class="text-2xl font-medium">{item.value}</h3>
              <p class="text-sm">{item.name}</p>
            </div>
          ))
        }
      </div>
      <div
        class="grid grid-cols-2 border-r-2 border-t-2 md:border-r-0 md:border-t-0"
      >
        {
          services.map((item) => (
            <div class="flex flex-col gap-2 p-4 md:p-6 border-l-2 border-b-2">
              <h4 class="text-xl font-medium">{item.name}</h4>
              <p>{item.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
